@model Booking

<h2>Edit Booking</h2>

<form asp-action="EditBooking" method="post">
    <input type="hidden" asp-for="BookingId" />

    <div class="form-group">
        <label asp-for="FK_CustomerId"></label>
        <input asp-for="FK_CustomerId" class="form-control" />
        <span asp-validation-for="FK_CustomerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FK_TableId"></label>
        <input asp-for="FK_TableId" type="date" class="form-control" />
        <span asp-validation-for="FK_TableId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" type="date" class="form-control" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerAmount"></label>
        <input asp-for="CustomerAmount" type="date" class="form-control" />
        <span asp-validation-for="CustomerAmount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Booking</button>
</form>