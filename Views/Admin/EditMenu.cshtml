@model Menu

<h2>Edit Dish</h2>

<form asp-action="EditMenu" method="post">
    <input type="hidden" asp-for="MenuId" />

    <div class="form-group">
        <label asp-for="DishName"></label>
        <input asp-for="DishName" class="form-control" />
        <span asp-validation-for="DishName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Availability"></label>
        <input asp-for="Availability" class="form-control" />
        <span asp-validation-for="Availability" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Dish</button>
</form>